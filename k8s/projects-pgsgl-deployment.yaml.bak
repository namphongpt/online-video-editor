apiVersion: v1
kind: Secret
metadata:
  name: postgres-secret
type: Opaque
data:
  POSTGRES_USER: cHNfdXNlcg== # pg_user
  POSTGRES_PASSWORD: cHNfcGFzc3dvcmQ= # pg_pass
  POSTGRES_DB: UHJvamVjdHM= # Projects
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: projects-pgsql
spec:
  replicas: 1
  selector:
    matchLabels:
      app: projects-pgsql
  template:
    metadata:
      labels:
        app: projects-pgsql
    spec:
      containers:
        - name: postgres
          image: 'postgres:16'
          ports:
            - containerPort: 5432
          envFrom:
            - secretRef:
                name: postgres-secret
          volumeMounts:
            - mountPath: /var/lib/postgresql/data
              name: postgresdata
      volumes:
        - name: postgresdata
          persistentVolumeClaim:
            claimName: postgres-volume-claim
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: postgres-volume-claim
  labels:
    app: projects-pgsql
spec:
  storageClassName: manual
  accessModes:
    - ReadWriteMany
  resources:
    requests:
      storage: 10Gi
---
apiVersion: v1
kind: PersistentVolume
metadata:
  name: postgres-volume
  labels:
    type: local
    app: projects-pgsql
spec:
  storageClassName: manual
  capacity:
    storage: 10Gi
  accessModes:
    - ReadWriteMany
  hostPath:
    path: /data/postgresql
---
apiVersion: v1
kind: Service
metadata:
  name: projects-pgsql
  labels:
    app: projects-pgsql
spec:
#  type: NodePort
  ports:
    - port: 5432
  selector:
    app: projects-pgsql
